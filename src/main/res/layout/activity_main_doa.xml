<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6CBADF"
    tools:context=".MainDoa">

    <ImageView
        android:id="@+id/doa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:paddingBottom="00dp"
        android:src="@drawable/doaa" />


    <Button
        android:id="@+id/btn_doa_sebelum_tidur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doa"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Sebelum Tidur"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_bangun_tidur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_sebelum_tidur"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Bangun Tidur"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_sebelum_makan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_bangun_tidur"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Sebelum Makan"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_sebelum_belajar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_sebelum_makan"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Sebelum Belajar"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_ketika_melihat_barang_ygdisukai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_sebelum_belajar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Ketika Melihat Barang Yang Disukai"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_hendak_keluar_rumah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_ketika_melihat_barang_ygdisukai"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Hendak Keluar Rumah"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_hendak_masuk_rumah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_hendak_keluar_rumah"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Hendak Masuk Rumah"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_menghilangkan_rasa_marah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_hendak_masuk_rumah"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Menghilangkan Rasa Marah"
        android:textColor="#7A2106"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_doa_untuk_kebaikan_oranglain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_doa_menghilangkan_rasa_marah"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-94dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Doa Untuk Kebaikan Oranglain"
        android:textColor="#7A2106"
        android:textStyle="bold" />

</RelativeLayout>